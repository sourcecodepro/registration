@if(User.Identity.IsAuthenticated)
{
    <form method="Post" class="form-inline" asp-page="/User/Logout">
        Welcome @User.Identity.Name
        <button type="submit" class="ml-m2 btn btn-link">Logout</button>
    </form>


}
else
{
    <a class="btn btn-link" asp-page="/User/Login">Login</a>

}